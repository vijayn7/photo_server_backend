# Development Configuration for Photo Server
# This file contains settings specific to development environment

# Server Configuration
DEV_HOST=127.0.0.1
DEV_PORT=8000
REACT_DEV_PORT=3000

# Database
DEV_DB_PATH=./data/photos.db

# Storage Paths (relative to project root)
DEV_PHOTOS_PATH=./photos
DEV_THUMBNAILS_PATH=./thumbnails

# Default Admin User for Development
DEV_ADMIN_USER=admin
DEV_ADMIN_PASSWORD=admin

# JWT Settings for Development
DEV_JWT_EXPIRE_MINUTES=60

# React Development Settings
REACT_APP_API_BASE_URL=http://localhost:8000

# Development Features
ENABLE_DEBUG_LOGGING=true
ENABLE_CORS=true
ENABLE_AUTO_RELOAD=true

# File Upload Limits (Development)
MAX_FILE_SIZE_MB=100
MAX_FILES_PER_UPLOAD=10
