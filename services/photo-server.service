[Unit]
Description=FastAPI Photo Server
After=network.target

[Service]
User=vnannapu
WorkingDirectory=/home/vnannapu/photo-server
ExecStart=/home/vnannapu/photo-server/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --limit-max-body-size 10737418240 --timeout-keep-alive 600
Restart=on-failure
RestartSec=5
StartLimitIntervalSec=60
StartLimitBurst=3
Environment="PATH=/home/vnannapu/photo-server/venv/bin:/usr/local/bin:/usr/bin:/bin"

[Install]
WantedBy=multi-user.target